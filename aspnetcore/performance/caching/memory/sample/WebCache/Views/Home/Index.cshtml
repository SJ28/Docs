@using WebCache.Models
@model WebCacheEntry
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div>
    <ul>
        <li><a asp-area="" asp-controller="Home" asp-action="IndexGet">Get</a></li>
        <li><a asp-area="" asp-controller="Home" asp-action="IndexGetOrCreate">GetOrCreate</a></li>
        <li><a asp-area="" asp-controller="Home" asp-action="IndexGetOrCreateAsync">GetOrCreateAsync</a></li>
        <li><a asp-area="" asp-controller="Home" asp-action="CreateCallbackEntry">CreateCallbackEntry</a></li>
        <li><a asp-area="" asp-controller="Home" asp-action="GetCallbackEntry">GetCallbackEntry</a></li>
        <li><a asp-area="" asp-controller="Home" asp-action="Remove">Remove</a></li>
        <li><a asp-area="" asp-controller="Home" asp-action="EvictDependency">EvictDependency</a></li>
        <li><a asp-area="" asp-controller="Home" asp-action="CancelTest">CancelTest</a></li>
    </ul>
</div>

<h3>Current Time: @DateTime.Now.TimeOfDay.ToString()</h3>

@if (Model?.CachedTime != null)
{
    <h3>Cached Time: @Model.CachedTime.Value.TimeOfDay.ToString()</h3>
}

@if (!string.IsNullOrEmpty(Model?.Message))
{
    <h4>@Model.Message</h4>
}
